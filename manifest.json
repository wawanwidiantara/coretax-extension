{
    "manifest_version": 3,
    "name": "CoreTax Assist",
    "version": "1.0.0",
    "description": "The common sense update that 1.2 Trillion Rupiah couldn't buy.",
    "action": {
        "default_popup": "index.html",
        "default_icon": {
            "128": "icon-128.png"
        }
    },
    "icons": {
        "128": "icon-128.png"
    },
    "background": {
        "service_worker": "src/background.ts",
        "type": "module"
    },
    "content_scripts": [
        {
            "js": [
                "src/content.tsx"
            ],
            "matches": [
                "https://coretaxdjp.pajak.go.id/*",
                "http://localhost:*/*"
            ]
        }
    ],
    "permissions": [
        "downloads",
        "storage",
        "scripting",
        "activeTab"
    ],
    "host_permissions": [
        "https://coretaxdjp.pajak.go.id/*"
    ]
}